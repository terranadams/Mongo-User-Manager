doctype html
html
    head
        
        link(rel='stylesheet', href='/styles/style.css')

         
    body
        h2 MongoDB User Manager
        a(href='/create')
            button Add User
        p
        each user, index in users
            div(class='myUsers')
                div UserID: #{user.userId} 
                div Firstname: #{user.first}
                div Lastname: #{user.last}
                div Email: #{user.email} 
                div Age: #{user.age} 
                a(href='/users/' + index)
                    button Edit
                form(action="/delete/" + index, method='post')
                    button(type='submit') Delete
                p
